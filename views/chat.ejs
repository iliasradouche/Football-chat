<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="chat.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Chat</title>
</head>

<body class="bg-zinc-900 p-0">

    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->

    <div class="sidebar">
        <div class="logo">
            <h1>F.</h1>
        </div>
        <ul class="menu">
            <li class="active">
                <a href="#"><i class="fas fa-tachometer-alt"></i></a>
            </li>

            <li>
                <a href="#"><i class="fas fa-chart-bar"></i></a>
            </li>

            <li>
                <a href="#"><i class="fas fa-briefcase"></i></a>
            </li>

            <li>
                <a href="#"><i class="fas fa-question-circle"></i></a>
            </li>

            <li>
                <a href="#"><i class="fas fa-cog"></i></a>
            </li>

            <li>
                <a href="#">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </li>
        </ul>
    </div>

        
        <!--COLUMN 1-->
        <!-- CONVERSATIONS LIST -->
        <div class="w-72 px-4 py-6 bg-zinc-900 shadow-lg">
            <div class="flex items-center mb-4">
                <div class="flex-grow">
                    <input class="w-full p-2 bg-zinc-800 shadow-lg rounded" placeholder="Search">
                </div>
                <div class="dropdown">
                    <button class="ml-4 text-zinc-800">
                        <i class="fas fa-search icon-large"></i>
                    </button>
                </div>
            </div>
            <div class="flex mb-4">
                <button id="tab1" class="tab-btn">Inbox</button>
            </div>
            <div id="content-t-1" class="inbox py-2">
                <div id="gamesList"></div>
            </div>
        </div>
            


        <!--COLUMN 2-->
        <!-- Chat Window -->
            <div class="flex-grow p-6 bg-zinc-900 shadow-lg flex flex-col justify-between ">
                <div>
                    <div class="flex justify-between mb-4">
                        <div id="chat-header" class="flex items-center">
                        </div>
                        <button class="text-gray-500 icon-large">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                    <div class="chat-content shadow-lg p-3 overflow-auto">
                        <div id="messageArea"></div>
                        <ul id="messages-list">
                            <!-- Chat messages screen-->
                            <!-- messages will be added here dynamically!!! -->
                        </ul>
                    </div>
                </div>
                <!-- Input area for the message -->
                <div>
                    <form id="messageForm">
                        <div class="flex items-center mt-4">
                            <input type="text" autocomplete="off" class="bg-zinc-800  shadow-lg flex-grow p-3 text-white mr-4  rounded"
                                id="messageInput" placeholder="Type a message..." required>
                            <button type="submit" class="text-[#e1ff57] icon-large"><i
                                    class="fas fa-paper-plane"></i></button>
                        </div>
                    </form>

                </div>
            </div>
        
        
        <!--COLUMN 3-->
        <!-- Member-->
        <div class="lg:flex-grow lg:w-20 w-full p-6 bg-zinc-950 shadow-lg flex flex-col justify-between">
            <div>
                <div class="mb-4">
                    <p class="members text-sm font-bold text-[#e1ff57] text-center border-b border-zinc-800 py-2">Members
                    </p>
                </div>
                <div>
                    <div id="participant-list"></div>
                </div>
            </div>
        </div>
    </div>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/chat.js"></script>

</body>

</html>